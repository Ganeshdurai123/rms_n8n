    },
    {
      "parameters": {
        "fromEmail": "={{ $env.SMTP_FROM_EMAIL || 'noreply@rms.local' }}",
        "toEmail": "={{ $json.data.assignedTo?.email || $json.data.createdBy?.email || '' }}",
        "subject": "=New comment on: {{ $json.data.request?.title || $json.data.title || 'Untitled' }}",
        "emailType": "html",
        "html": "=<div style=\"font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;\">\n  <h2 style=\"color: #2563eb;\">New Comment Added</h2>\n  <p>A new comment was added to a request in your program.</p>\n  <table style=\"width: 100%; border-collapse: collapse; margin: 16px 0;\">\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Request:</td><td style=\"padding: 8px;\">{{ $json.data.request?.title || $json.data.title || 'N/A' }}</td></tr>\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Comment by:</td><td style=\"padding: 8px;\">{{ $json.performedBy?.name || 'System' }}</td></tr>\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Time:</td><td style=\"padding: 8px;\">{{ $json.timestamp }}</td></tr>\n  </table>\n  <p style=\"margin-top: 16px;\"><a href=\"{{ $env.CLIENT_URL || 'http://localhost' }}/requests/{{ $json.requestId }}\" style=\"background: #2563eb; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;\">View Request</a></p>\n</div>",
        "options": {}
      },
      "id": "email-comment-added",
      "name": "Email: Comment Added",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2.1,
      "position": [700, 460],
      "credentials": {
        "smtp": {
          "id": "CONFIGURE_ME",
          "name": "SMTP Account"
        }
      }
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=http://server:5000/api/v1/internal/notifications",
