{
  "name": "RMS Email Notification Dispatch",
  "nodes": [
    {
      "parameters": {
        "path": "rms-events",
        "httpMethod": "POST",
        "responseMode": "responseNode",
        "options": {
          "rawBody": false
        }
      },
      "id": "webhook-trigger",
      "name": "Webhook Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [250, 300],
      "webhookId": "rms-events"
    },
    {
      "parameters": {
        "rules": {
          "rules": [
            {
              "conditions": {
                "options": {
                  "caseSensitive": true,
                  "leftValue": "",
                  "typeValidation": "strict"
                },
                "conditions": [
                  {
                    "leftValue": "={{ $json.eventType }}",
                    "rightValue": "request.status_changed",
                    "operator": {
                      "type": "string",
                      "operation": "equals"
                    }
                  }
                ],
                "combinator": "and"
              },
              "renameOutput": true,
              "outputKey": "status_changed"
            },
            {
              "conditions": {
                "options": {
                  "caseSensitive": true,
                  "leftValue": "",
                  "typeValidation": "strict"
                },
                "conditions": [
                  {
                    "leftValue": "={{ $json.eventType }}",
                    "rightValue": "request.assigned",
                    "operator": {
                      "type": "string",
                      "operation": "equals"
                    }
                  }
                ],
                "combinator": "and"
              },
              "renameOutput": true,
              "outputKey": "assigned"
            },
            {
              "conditions": {
                "options": {
                  "caseSensitive": true,
                  "leftValue": "",
                  "typeValidation": "strict"
                },
                "conditions": [
                  {
                    "leftValue": "={{ $json.eventType }}",
                    "rightValue": "comment.added",
                    "operator": {
                      "type": "string",
                      "operation": "equals"
                    }
                  }
                ],
                "combinator": "and"
              },
              "renameOutput": true,
              "outputKey": "comment_added"
            }
          ],
          "fallbackOutput": {
            "name": "discard"
          }
        },
        "options": {}
      },
      "id": "switch-event-type",
      "name": "Route by Event Type",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 3,
      "position": [470, 300]
    },
    {
      "parameters": {
        "fromEmail": "={{ $env.SMTP_FROM_EMAIL || 'noreply@rms.local' }}",
        "toEmail": "={{ $json.data.assignedTo?.email || $json.data.createdBy?.email || '' }}",
        "subject": "=Request status changed: {{ $json.data.request?.title || $json.data.title || 'Untitled' }}",
        "emailType": "html",
        "html": "=<div style=\"font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;\">\n  <h2 style=\"color: #2563eb;\">Request Status Changed</h2>\n  <p>A request has been updated in your program.</p>\n  <table style=\"width: 100%; border-collapse: collapse; margin: 16px 0;\">\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Request:</td><td style=\"padding: 8px;\">{{ $json.data.request?.title || $json.data.title || 'N/A' }}</td></tr>\n    <tr><td style=\"padding: 8px; font-weight: bold;\">New Status:</td><td style=\"padding: 8px;\">{{ $json.data.to || $json.data.status || 'N/A' }}</td></tr>\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Changed by:</td><td style=\"padding: 8px;\">{{ $json.performedBy?.name || 'System' }}</td></tr>\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Time:</td><td style=\"padding: 8px;\">{{ $json.timestamp }}</td></tr>\n  </table>\n  <p style=\"margin-top: 16px;\"><a href=\"{{ $env.CLIENT_URL || 'http://localhost' }}/requests/{{ $json.requestId }}\" style=\"background: #2563eb; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;\">View Request</a></p>\n</div>",
        "options": {}
      },
      "id": "email-status-changed",
      "name": "Email: Status Changed",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2.1,
      "position": [700, 140],
      "credentials": {
        "smtp": {
          "id": "CONFIGURE_ME",
          "name": "SMTP Account"
        }
      }
    },
    {
      "parameters": {
        "fromEmail": "={{ $env.SMTP_FROM_EMAIL || 'noreply@rms.local' }}",
        "toEmail": "={{ $json.data.assignedTo?.email || '' }}",
        "subject": "=You have been assigned: {{ $json.data.request?.title || $json.data.title || 'Untitled' }}",
        "emailType": "html",
        "html": "=<div style=\"font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;\">\n  <h2 style=\"color: #2563eb;\">Request Assigned to You</h2>\n  <p>You have been assigned a request in your program.</p>\n  <table style=\"width: 100%; border-collapse: collapse; margin: 16px 0;\">\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Request:</td><td style=\"padding: 8px;\">{{ $json.data.request?.title || $json.data.title || 'N/A' }}</td></tr>\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Status:</td><td style=\"padding: 8px;\">{{ $json.data.status || 'N/A' }}</td></tr>\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Assigned by:</td><td style=\"padding: 8px;\">{{ $json.performedBy?.name || 'System' }}</td></tr>\n    <tr><td style=\"padding: 8px; font-weight: bold;\">Time:</td><td style=\"padding: 8px;\">{{ $json.timestamp }}</td></tr>\n  </table>\n  <p style=\"margin-top: 16px;\"><a href=\"{{ $env.CLIENT_URL || 'http://localhost' }}/requests/{{ $json.requestId }}\" style=\"background: #2563eb; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;\">View Request</a></p>\n</div>",
        "options": {}
      },
      "id": "email-assigned",
      "name": "Email: Assignment",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2.1,
      "position": [700, 300],
      "credentials": {
        "smtp": {
          "id": "CONFIGURE_ME",
          "name": "SMTP Account"
        }
