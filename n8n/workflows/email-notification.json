        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"userId\": \"{{ $json.data.assignedTo?.userId || $json.data.createdBy?.userId || '' }}\",\n  \"type\": \"request.status_changed\",\n  \"title\": \"Email sent: Status changed\",\n  \"message\": \"Email notification sent for status change on request '{{ $json.data.request?.title || $json.data.title || '' }}'\",\n  \"requestId\": \"{{ $json.requestId }}\",\n  \"programId\": \"{{ $json.programId }}\"\n}",
        "options": {}
